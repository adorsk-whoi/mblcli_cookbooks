<%= "#{@zone[:zone]}. SOA #{@zone[:SOA]} #{@zone[:email]} #{@zone[:serial]} #{@zone[:refresh]} #{@zone[:retry]} #{@zone[:expire]} #{@zone[:minimum]} ~ "%>

